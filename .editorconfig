# EditorConfig - https://editorconfig.org
# =============================================================================
# fq-compressor Editor Configuration
# =============================================================================
# This file ensures consistent coding styles across different editors and IDEs.
# Requirement 7.3: Code style enforcement
# =============================================================================

root = true

# 全局默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Markdown 文件保留尾部空格（用于换行）
[*.md]
trim_trailing_whitespace = false

# Shell 脚本
[*.sh]
charset = utf-8
indent_style = space
indent_size = 4

# JSON 配置文件
[*.json]
indent_style = space
indent_size = 4

# YAML 配置文件
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# CMake 文件
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 4

# C/C++ 源文件 (aligned with .clang-format)
[*.{c,cc,cpp,cxx,h,hh,hpp,hxx,inl,ipp}]
charset = utf-8
indent_style = space
indent_size = 4
cpp_indent_braces = false
max_line_length = 100

# Python 文件
[*.py]
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 4

# Makefile 必须使用 Tab
[Makefile]
indent_style = tab
indent_size = 4

# Conan 配置
[conanfile.*]
indent_style = space
indent_size = 4

# Conan profiles
[conan/profiles/*]
indent_style = space
indent_size = 4

# Docker 文件
[Dockerfile*]
indent_style = space
indent_size = 4

# GitHub Actions workflows
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# VS Code settings
[.vscode/*.json]
indent_style = space
indent_size = 4

# Dev Container configuration
[.devcontainer/*.json]
indent_style = space
indent_size = 4

